<h1>Items#index</h1>
<p>Find me in app/views/items/index.html.erb</p>

<section class="section">
  <div class="container">
    <div class="columns is-multiline">
      <% @items.each do |item| %>
        <div class="column is-4">
          <div class="card">
            <div class="card-image">
              <figure class="image is-4by3">
                <%= link_to item_path(item) do %>
                  <%= attachment_image_tag item, :image %>
                <% end %>
              </figure>
              <div class="media-content">
                  <div class="title"><%=link_to item.item_name, item_path(item.id) %></div>
              </div>
            </div>
            <div class="card-content">
              <div class="media">
                <div class="media-left">
                  <figure class="image is-48x48">
                    <%= link_to user_path(item.user.id) do %>
                    <%= attachment_image_tag item.user, :profile_image, fallback: "no_image.png", class: "profile_image" %>
                    <% end %>
                  </figure>
                </div>
                <div class="media-content">
                  <div class="label"><%=link_to item.user.username, user_path(item.user.id) %></div>
                </div>
              </div>

              <div class="content">
                <time><%= item.updated_at.strftime("%Y-%m-%d %H:%M") %></time>更新
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>